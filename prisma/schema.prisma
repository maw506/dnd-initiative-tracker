generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum CharacterType {
  PC
  NPC
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  parties   Party[]
  combats   Combat[]
  createdAt DateTime @default(now())
}

model Party {
  id        String      @id @default(cuid())
  name      String
  ownerId   String
  owner     User        @relation(fields: [ownerId], references: [id])
  players   Character[]
  createdAt DateTime    @default(now())
}

model Character {
  id        String        @id @default(cuid())
  name      String
  type      CharacterType
  ac        Int?
  maxHp     Int?
  notes     String?
  partyId   String?
  party     Party?        @relation(fields: [partyId], references: [id])
  createdAt DateTime      @default(now())
}

model Combat {
  id        String      @id @default(cuid())
  slug      String      @unique
  name      String
  authorId  String
  author    User        @relation(fields: [authorId], references: [id])
  blueprint Json
  createdAt DateTime    @default(now())
  runs      CombatRun[]
}

model CombatRun {
  id        String   @id @default(cuid())
  combatId  String
  combat    Combat   @relation(fields: [combatId], references: [id])
  round     Int      @default(1)
  state     Json
  log       Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
